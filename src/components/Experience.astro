          <path d="M6 12v5c0 2 2 3 6 3s6-1 6-3v-5"></path>
        </svg>
        <span data-i18n="experience.educationTitle">Education</span>
      </h3>
      {education.map(edu => (
        <div class="education-card glass-card">
          <div class="education-header">
            <div>
              <h4 class="degree" data-i18n={edu.degreeKey}>{edu.degree}</h4>
              <span class="school">{edu.school}</span>
            </div>
            <span class="period mono">{edu.period}</span>
          </div>
