    font-size: 0.95rem;
  }

  .education-desc {
    color: var(--text-secondary);
    font-size: 0.95rem;
  }

  @media (max-width: 768px) {
    .timeline-item {
      gap: 1rem;
    }

    .timeline-content {
      padding: 1.5rem;
    }

    .timeline-header {
      flex-direction: column;
    }

    .marker-dot {
      width: 12px;
      height: 12px;
    }

    .education-card {
      padding: 1.5rem;
    }
  }
</style>
