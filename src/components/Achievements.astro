<section class="achievements" id="achievements">
  <div class="container">
    <div class="section-label reveal mono">&lt;achievements&gt;</div>

    <div class="section-header reveal">
      <h2 class="section-title reveal" data-i18n="achievements.title">Awards & Recognition</h2>
      <p class="section-subtitle reveal" data-i18n="achievements.subtitle">Recognized for innovation and excellence</p>
    </div>

    <div class="achievements-grid">
      {achievements.map((achievement, index) => (
        <a href={achievement.link} target="_blank" rel="noopener noreferrer" class={`achievement-card reveal`} style={`--delay: ${index * 0.1}s`}>
          <div class="achievement-icon">{achievement.icon}</div>
          <div class="achievement-content">
            <h3 class="achievement-title" data-i18n={achievement.titleKey}>{achievement.title}</h3>
            <p class="achievement-description" data-i18n={achievement.descriptionKey}>{achievement.description}</p>
          </div>
          <div class="achievement-arrow">‚Üí</div>
        </a>
      ))}
    </div>

    <span class="section-label-end reveal mono">&lt;/achievements&gt;</span>
  </div>
</section>

<style>
  .achievements {
    padding: 8rem 0;
    position: relative;
  }

  .section-label {
    display: inline-block;
    font-size: 0.9rem;
    color: var(--accent-primary);
    margin-bottom: 1rem;
    opacity: 1;
  }

  .section-label-end {
    display: block;
    font-size: 0.9rem;
    color: var(--accent-primary);
    margin-top: 4rem;
    text-align: center;
    opacity: 1;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 900;
    margin-bottom: 1rem;
    letter-spacing: -0.05em;
    text-transform: uppercase;
    color: var(--text-primary);
    line-height: 0.9;
  }

  .section-subtitle {
    font-size: 1.25rem;
    font-weight: 100;
    letter-spacing: 0.1em;
    color: var(--text-secondary);
    text-transform: uppercase;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .achievement-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem;
    background: var(--bg-primary);
    border: 3px solid var(--border-color);
    border-radius: 0;
    text-decoration: none;
    color: inherit;
    transition: all 0.15s ease;
    position: relative;
    overflow: hidden;
    box-shadow: 8px 8px 0 rgba(255, 69, 0, 0.15);
    animation: slideUp 0.6s ease forwards;
    animation-delay: var(--delay, 0s);
    opacity: 0;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .achievement-card:hover {
    border-color: var(--accent-primary);
    transform: translate(4px, 4px);
    box-shadow: 4px 4px 0 rgba(255, 69, 0, 0.3);
  }

  .achievement-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--accent-primary);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .achievement-card:hover::before {
    transform: scaleX(1);
  }

  .achievement-icon {
    font-size: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: rgba(255, 69, 0, 0.1);
    border: 2px solid var(--accent-primary);
    border-radius: 0;
  }

  .achievement-content {
    flex: 1;
  }

  .achievement-title {
    font-size: 1.25rem;
    font-weight: 900;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .achievement-description {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .achievement-arrow {
    font-size: 1.5rem;
    color: var(--accent-primary);
    font-weight: 900;
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .achievement-card:hover .achievement-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  @media (max-width: 768px) {
    .achievements {
      padding: 5rem 0;
    }

    .achievements-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 2.5rem;
    }
  }
</style>
