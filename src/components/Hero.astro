---
const socialLinks = [
  { href: 'https://github.com/Jeong-Min-Cho', icon: 'github', label: 'GitHub' },
  { href: 'https://linkedin.com/in/Jeong-Min-Cho-', icon: 'linkedin', label: 'LinkedIn' },
  { href: 'https://x.com/JeongMinCh0', icon: 'twitter', label: 'X' },
];
---

<section class="hero" id="hero">
  <div class="hero-particles" id="particles"></div>
  <div class="hero-glow"></div>

  <div class="container hero-container">
    <div class="hero-content">
      <div class="hero-badge">
        <span class="badge-dot"></span>
        <span data-i18n="hero.badge">Fullstack Software Engineer</span>
      </div>

      <h1 class="hero-title">
        <span class="hero-greeting" data-i18n="hero.greeting">Hello, I'm</span>
        <span class="hero-name">
          <span class="name-text" data-i18n="hero.name">Jeong Min Cho</span>
          <span class="name-cursor">|</span>
        </span>
        <span class="hero-role">
          <span data-i18n="hero.role">I build <span class="gradient-text glow-text">scalable</span> web applications</span>
        </span>
      </h1>

      <p class="hero-description" data-i18n="hero.description">
        A Fullstack Software Engineer with 3+ years of experience building
        scalable web applications using React, Next.js, Java, and Python
        across enterprise and startup environments.
      </p>

      <div class="hero-cta">
        <a href="#projects" class="btn btn-primary">
          <span data-i18n="hero.viewWork">View My Work</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 17L17 7M17 7H7M17 7V17"/>
          </svg>
        </a>
        <a href="#contact" class="btn btn-secondary">
          <span data-i18n="hero.getInTouch">Get In Touch</span>
        </a>
      </div>

      <div class="hero-social">
        {socialLinks.map(link => (
          <a href={link.href} target="_blank" rel="noopener noreferrer" class="social-link" aria-label={link.label}>
            {link.icon === 'github' && (
              <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            )}
            {link.icon === 'linkedin' && (
              <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            )}
            {link.icon === 'twitter' && (
              <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            )}
          </a>
        ))}
      </div>
    </div>

    <div class="hero-visual">
      <div class="visual-container">
        <div class="code-window">
          <div class="window-header">
            <div class="window-dots">
              <span class="dot red"></span>
              <span class="dot yellow"></span>
              <span class="dot green"></span>
            </div>
            <span class="window-title mono">portfolio.tsx</span>
          </div>
          <div class="window-content mono">
            <pre><code><span class="code-keyword">const</span> <span class="code-var">developer</span> = &#123;
  <span class="code-prop">name</span>: <span class="code-string">"Jeong Min Cho"</span>,
  <span class="code-prop">title</span>: <span class="code-string">"Fullstack Engineer"</span>,
  <span class="code-prop">skills</span>: [<span class="code-string">"React"</span>, <span class="code-string">"Next.js"</span>, <span class="code-string">"Java"</span>, <span class="code-string">"Python"</span>],
  <span class="code-prop">location</span>: <span class="code-string">"Seoul, South Korea"</span>,
  <span class="code-prop">available</span>: <span class="code-bool">true</span>,
&#125;;

<span class="code-keyword">export default</span> developer;</code></pre>
          </div>
        </div>
        <div class="floating-badge badge-1">
          <span data-i18n="hero.badges.shipFast">Ship Fast</span>
        </div>
        <div class="floating-badge badge-2">
          <span data-i18n="hero.badges.cleanCode">Clean Code</span>
        </div>
        <div class="floating-badge badge-3">
          <span data-i18n="hero.badges.problemSolver">Problem Solver</span>
        </div>
      </div>
    </div>
  </div>

  <div class="scroll-indicator">
    <div class="mouse">
      <div class="wheel"></div>
    </div>
    <span data-i18n="hero.scroll">Scroll to explore</span>
  </div>
</section>

<script>
  const particlesContainer = document.getElementById('particles');
  if (particlesContainer) {
    for (let i = 0; i < 50; i++) {
      const particle = document.createElement('div');
      particle.className = 'particle';
      const delay = (Math.random() * 20).toFixed(2);
      const duration = (15 + Math.random() * 20).toFixed(2);
      const x = (Math.random() * 100).toFixed(2);
      const size = (2 + Math.random() * 4).toFixed(2);
      particle.style.cssText = '--delay:' + delay + 's;--duration:' + duration + 's;--x:' + x + '%;--size:' + size + 'px';
      particlesContainer.appendChild(particle);
    }
  }
</script>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    padding-top: 6rem;
    overflow: hidden;
  }

  .hero-particles {
    display: none;
  }

  .particle {
    display: none;
  }

  .hero-glow {
    display: none;
  }

  .hero-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .hero-content { max-width: 600px; }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: 2px solid var(--accent-primary);
    border-radius: 0;
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--accent-primary);
    margin-bottom: 2rem;
    animation: fadeInUp 0.8s ease forwards;
    font-family: 'Inter', 'Noto Sans KR', system-ui, sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--accent-primary);
    border-radius: 0;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .hero-greeting {
    display: block;
    font-size: clamp(1rem, 2vw, 1.25rem);
    font-weight: 500;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    animation: fadeInUp 0.8s ease 0.1s forwards;
    opacity: 0;
  }

  .hero-name {
    display: block;
    margin-bottom: 0.5rem;
    animation: fadeInUp 0.8s ease 0.2s forwards;
    opacity: 0;
  }

  .name-cursor {
    color: var(--accent-primary);
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .hero-role {
    display: block;
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 500;
    color: var(--text-secondary);
    animation: fadeInUp 0.8s ease 0.3s forwards;
    opacity: 0;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 500px;
    animation: fadeInUp 0.8s ease 0.4s forwards;
    opacity: 0;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
    animation: fadeInUp 0.8s ease 0.5s forwards;
    opacity: 0;
  }

  .hero-social {
    display: flex;
    gap: 1rem;
    animation: fadeInUp 0.8s ease 0.6s forwards;
    opacity: 0;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: transparent;
    border: 2px solid var(--border-color);
    border-radius: 0;
    color: var(--text-secondary);
    transition: all 0.15s ease;
  }

  .social-link:hover {
    color: var(--bg-primary);
    background: var(--accent-primary);
    border-color: var(--accent-primary);
    transform: translate(2px, 2px);
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    animation: fadeIn 1s ease 0.5s forwards;
    opacity: 0;
  }

  @keyframes fadeIn { to { opacity: 1; } }

  .visual-container {
    position: relative;
    width: 100%;
    max-width: 480px;
  }

  .code-window {
    background: var(--bg-secondary);
    border: 4px solid var(--accent-primary);
    border-radius: 0;
    overflow: hidden;
    box-shadow: 12px 12px 0 rgba(255, 69, 0, 0.3);
  }

  .window-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: var(--accent-primary);
    border-bottom: none;
  }

  .window-dots { display: flex; gap: 8px; }
  .dot { width: 12px; height: 12px; border-radius: 0; }
  .dot.red { background: #ff5f57; }
  .dot.yellow { background: #febc2e; }
  .dot.green { background: #28c840; }
  .window-title { font-size: 0.8rem; color: var(--bg-primary); font-weight: 700; }

  .window-content {
    padding: 1.5rem;
    font-size: 0.9rem;
    line-height: 1.8;
    overflow-x: auto;
  }

  .window-content pre { margin: 0; }
  .code-keyword { color: #c678dd; }
  .code-var { color: #e5c07b; }
  .code-prop { color: #e06c75; }
  .code-string { color: #98c379; }
  .code-bool { color: #d19a66; }

  .floating-badge {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    background: rgba(255, 69, 0, 0.85);
    border: 3px solid var(--accent-primary);
    border-radius: 0;
    font-size: 0.9rem;
    font-weight: 900;
    color: var(--bg-primary);
    box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.4);
    animation: none;
    font-family: 'Inter', 'Noto Sans KR', system-ui, sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    z-index: 10;
    transition: all 0.15s ease;
    pointer-events: none;
  }

  .floating-badge:hover {
    transform: translate(3px, 3px);
    box-shadow: 3px 3px 0 rgba(0, 0, 0, 0.4);
  }

  .badge-1 { top: -3rem; right: -6rem; }
  .badge-2 { bottom: -4rem; left: -3rem; }
  .badge-3 { top: 50%; right: -8rem; transform: translateY(-50%); }

  @keyframes floatBadge {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-muted);
    font-size: 0.85rem;
    animation: fadeInUp 0.8s ease 1s forwards, bounce 2s ease-in-out 2s infinite;
    opacity: 0;
  }

  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(8px); }
  }

  .mouse {
    width: 24px;
    height: 36px;
    border: 2px solid var(--text-muted);
    border-radius: 12px;
    position: relative;
  }

  .wheel {
    width: 4px;
    height: 8px;
    background: var(--text-muted);
    border-radius: 2px;
    position: absolute;
    top: 6px;
    left: 50%;
    transform: translateX(-50%);
    animation: scroll 2s ease-in-out infinite;
  }

  @keyframes scroll {
    0%, 100% { opacity: 1; transform: translateX(-50%) translateY(0); }
    50% { opacity: 0.5; transform: translateX(-50%) translateY(8px); }
  }

  @media (max-width: 1024px) {
    .hero-container { grid-template-columns: 1fr; text-align: center; }
    .hero-content { max-width: 100%; }
    .hero-description { max-width: 100%; }
    .hero-cta, .hero-social { justify-content: center; }
    .hero-visual { display: none; }
  }

  @media (max-width: 480px) {
    .hero-cta { flex-direction: column; }
    .btn { width: 100%; justify-content: center; }
    .scroll-indicator { display: none; }
  }
</style>
