---
const skillCategories = [
  {
    title: 'Frontend',
    icon: 'layout',
    skills: [
      { name: 'React', level: 95 },
      { name: 'Next.js', level: 92 },
      { name: 'TypeScript', level: 90 },
      { name: 'Astro', level: 85 },
      { name: 'ASP.NET', level: 75 },
    ],
  },
  {
    title: 'Backend',
    icon: 'server',
    skills: [
      { name: 'Java / Spring Boot', level: 90 },
      { name: 'Python / FastAPI', level: 88 },
      { name: 'Node.js', level: 85 },
      { name: 'PostgreSQL', level: 85 },
      { name: 'MongoDB', level: 80 },
    ],
  },
  {
    title: 'Cloud & DevOps',
    icon: 'tool',
    skills: [
      { name: 'Docker', level: 90 },
      { name: 'AWS', level: 85 },
      { name: 'CI/CD / Jenkins', level: 88 },
      { name: 'GCP', level: 75 },
      { name: 'DigitalOcean', level: 80 },
    ],
  },
];

const technologies = [
  'Java', 'JavaScript', 'TypeScript', 'Python', 'C++', 'C#', 'SQL',
  'React', 'Next.js', 'Astro', 'ASP.NET',
  'Spring Boot', 'FastAPI', 'Node.js',
  'AWS', 'DigitalOcean', 'GCP', 'Docker', 'Jenkins', 'CI/CD',
  'PostgreSQL', 'MySQL', 'MongoDB', 'Firebase'
];
---

<section class="section skills" id="skills">
  <div class="container">
    <div class="section-header reveal">
      <span class="section-label mono">&lt;skills&gt;</span>
      <h2 class="section-title">Technical Expertise</h2>
      <p class="section-subtitle">
        Technologies and tools I use to bring ideas to life
      </p>
    </div>

    <div class="skills-grid">
      {skillCategories.map((category, catIndex) => (
        <div class={`skill-category glass-card reveal reveal-delay-${catIndex + 1}`}>
          <div class="category-header">
            <div class="category-icon">
              {category.icon === 'layout' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="3" y1="9" x2="21" y2="9"></line>
                  <line x1="9" y1="21" x2="9" y2="9"></line>
                </svg>
              )}
              {category.icon === 'server' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect>
                  <rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect>
                  <line x1="6" y1="6" x2="6.01" y2="6"></line>
                  <line x1="6" y1="18" x2="6.01" y2="18"></line>
                </svg>
              )}
              {category.icon === 'tool' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
                </svg>
              )}
            </div>
            <h3 class="category-title">{category.title}</h3>
          </div>
          <div class="skills-list">
            {category.skills.map((skill, skillIndex) => (
              <div class="skill-item" style={`--delay: ${skillIndex * 0.1}s`}>
                <div class="skill-header">
                  <span class="skill-name">{skill.name}</span>
                  <span class="skill-percent mono">{skill.level}%</span>
                </div>
                <div class="skill-bar">
                  <div class="skill-progress" data-level={skill.level}></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <div class="tech-cloud reveal">
      <h3 class="tech-title">Technologies I Work With</h3>
      <div class="tech-tags">
        {technologies.map((tech, index) => (
          <span class="tech-tag" style={`--delay: ${index * 0.05}s`}>{tech}</span>
        ))}
      </div>
    </div>

    <span class="section-label-end reveal mono">&lt;/skills&gt;</span>
  </div>
</section>

<style>
  .skills {
    background: linear-gradient(180deg, transparent, rgba(99, 102, 241, 0.03), transparent);
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    font-size: 0.9rem;
    color: var(--accent-primary);
    margin-bottom: 1rem;
    opacity: 0.8;
  }

  .section-label-end {
    display: block;
    font-size: 0.9rem;
    color: var(--accent-primary);
    margin-top: 4rem;
    text-align: center;
    opacity: 0.8;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .skill-category {
    padding: 2rem;
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .category-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.2), rgba(139, 92, 246, 0.2));
    border-radius: 12px;
    color: var(--accent-primary);
  }

  .category-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .skills-list {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .skill-item {
    animation: fadeIn 0.6s ease forwards;
    animation-delay: var(--delay);
  }

  .skill-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }

  .skill-name {
    font-size: 0.95rem;
    color: var(--text-primary);
    font-weight: 500;
  }

  .skill-percent {
    font-size: 0.85rem;
    color: var(--accent-primary);
  }

  .skill-bar {
    height: 8px;
    background: var(--bg-tertiary);
    border-radius: 4px;
    overflow: hidden;
  }

  .skill-progress {
    height: 100%;
    width: 0;
    background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
    border-radius: 4px;
    transition: width 1s ease;
    transition-delay: var(--delay);
  }

  .skill-category.revealed .skill-progress {
    width: var(--level);
  }

  .tech-cloud {
    text-align: center;
    padding: 3rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 24px;
  }

  .tech-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 2rem;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
  }

  .tech-tag {
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--border-color);
    border-radius: 50px;
    font-size: 0.9rem;
    color: var(--text-secondary);
    transition: all 0.3s ease;
    cursor: default;
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
  }

  .tech-cloud.revealed .tech-tag {
    opacity: 1;
  }

  .tech-tag:hover {
    color: var(--text-primary);
    border-color: var(--accent-primary);
    background: rgba(99, 102, 241, 0.1);
    transform: translateY(-2px);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }

    .tech-cloud {
      padding: 2rem 1.5rem;
    }
  }
</style>

<script>
  // Set skill progress levels from data attributes
  document.querySelectorAll('.skill-progress[data-level]').forEach(el => {
    const level = el.getAttribute('data-level');
    if (level) {
      (el as HTMLElement).style.setProperty('--level', level + '%');
    }
  });
</script>
